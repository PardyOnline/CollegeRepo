<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="/styles.css">
    <script src="/scripts.js"></script>

    <title>Predictions</title>
</head>
<body>
    <div id="content">
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">Pardy Stores</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/items">Inventory</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/suppliers">Suppliers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/orders">Orders</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/predictions">Predictions</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container mt-4">
            <h1>Stock Predictions</h1>
            <form action="/predictions" method="POST">
                <div class="form-group">
                    <label for="stockItemSelect">Select an Item:</label>
                    <select id="stockItemSelect" name="itemDescription" class="form-control">
                        <option value="">Select an item</option>
                        <% items.forEach(function(item) { %>
                            <option value="<%= item.Description %>"><%= item.Description %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label>Week 1 Sales:</label>
                    <input type="number" name="week1" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Week 2 Sales:</label>
                    <input type="number" name="week2" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Week 3 Sales:</label>
                    <input type="number" name="week3" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Predict Stock</button>
            </form>
            
    
            <% if (predictionResult && predictionResult !== '') { %>
                <div class="mt-3">
                    <h3>Prediction Result:</h3>
                    <p>Predicted stock for next week: <%= predictionResult %></p>
                </div>
              <% } else { %>
                <div class="mt-3">
                    <h3>No Prediction Available</h3>
                    <p>Could not calculate prediction at this time.</p>
                </div>
              <% } %>
        </div>
    </div>
    <div class="footer">
        Pardy Stores Enterprises Â© <%= new Date().getFullYear() %>
    </div>
    <!-- Include Bootstrap CSS, JS and Dependancies -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    
</body>
</html>